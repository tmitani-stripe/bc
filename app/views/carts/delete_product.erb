function deleteProductFromCart(target_products_order_id, only_product) {
  const targetProduct = document.getElementById(`products-order-${target_products_order_id}`);
  targetProduct.remove();
   if (only_product == true) {
    btn = document.getElementById("checkout-btn");
    btn.insertAdjacentHTML("afterend","Shopping Cart is Empty");
    btn.remove();
  }
}
